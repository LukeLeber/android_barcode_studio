<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="${packageName}.${activityClass}">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/symbologyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Select a Symbology"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp">

                <Spinner
                    android:id="@+id/symbologies"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/configure_symbology"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/symbologies"
                    android:text="settings"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Printing Options"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/radio_button_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        >

                        <RadioButton
                            android:id="@+id/batch_mode_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:checked="true"
                            android:text="Single"/>

                        <RadioButton
                            android:id="@+id/range_mode_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:checked="false"
                            android:text="Range"
                            />
                    </RadioGroup>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="249dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/radio_button_holder"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/batch_mode_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:hint="Encoding Text"
                        android:maxWidth="138dip"
                        android:scrollHorizontally="true"
                        android:textSize="12sp"
                        />

                    <EditText
                        android:id="@+id/batch_mode_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/range_mode_end"
                        android:layout_alignRight="@+id/range_mode_end"
                        android:layout_toRightOf="@+id/batch_mode_text"
                        android:hint="# bcs"
                        android:digits="0123456789"
                        android:maxWidth="69dp"
                        android:scrollHorizontally="true"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/range_mode_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/batch_mode_text"
                        android:hint="range-begin"
                        android:maxWidth="120dp"
                        android:enabled="false"
                        android:scrollHorizontally="true"
                        android:digits="0123456789"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/batch_mode_text"
                        android:layout_marginTop="12dip"
                        android:layout_toRightOf="@+id/range_mode_start"
                        android:text="to"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/range_mode_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/batch_mode_count"
                        android:layout_toRightOf="@+id/to"
                        android:hint="range-end"
                        android:digits="0123456789"
                        android:maxWidth="112dp"
                        android:enabled="false"
                        android:scrollHorizontally="true"
                        android:textSize="12sp"/>
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <Button
                    android:id="@+id/configure_page"
                    android:layout_width="fill_parent"
                    android:layout_height="100sp"
                    android:layout_weight="1"
                    android:text="Page Setup"
                    android:textSize="10sp"
                    />

                <Button
                    android:id="@+id/print_preview"
                    android:enabled="false"
                    android:layout_width="fill_parent"
                    android:layout_height="100sp"
                    android:layout_weight="1"
                    android:text="Preview"
                    android:textSize="10sp"
                    />

                <Button
                    android:id="@+id/print"
                    android:enabled="false"
                    android:layout_width="fill_parent"
                    android:layout_height="100sp"
                    android:layout_weight="1"
                    android:text="Print"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
